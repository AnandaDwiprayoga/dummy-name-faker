{
  "name": "open-source",
  "version": "1.0.0",
  "description": "learn contribute in open source",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier ./src --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prebuild": "rimraf dist",
    "build": "babel src --out-dir dist --ignore src/**/*.test.js --copy-files --no-copy-ignored",
    "rollup": "rollup -c"
  },
  "author": "ananda dwi prayoga <prayogaananda04@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "eslint": "^7.9.0",
    "husky": "^4.3.0",
    "jest-cli": "^26.4.2",
    "lint-staged": "^10.3.0",
    "live-server": "^1.2.1",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.27.1",
    "rollup-plugin-commonjs": "^10.1.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "npm run format",
      "git add"
    ]
  },
  "files": [
    "dist"
  ]
}
